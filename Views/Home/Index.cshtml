@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee";
}

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script type="text/javascript" src="~/Scripts/EmployeeJS.js"></script>
<link type="text/css" rel="stylesheet" href="~/Content/EmployeeCss.css" />


<div class="empPage">
    <div id="empTbl" class="col-sm-3" style="padding: 50px;" >

        @foreach (Employee emp in Model)
        {
            <div class="empName" style="display:table; height: 50px; width: 200px; overflow: hidden;">@emp.Name</div>
        }
    </div>


    <div id="addEmployeeForm" class="col-sm-9" style="display: none; padding: 50px">

        <table cellpadding="0" cellspacing="0">
            <tr>
                <th style="padding: 10px 0 10px 0;">Personal Information</th>
            </tr>
            <tr>
                <td><b>Full Name</b></td>
                <td class="padding-class">@Html.TextBox("txtUserName") </td>
            </tr>
            <tr>
                <td><b>Address</b></td>
                <td class="padding-class">@Html.TextBox("txtAddress") </td>
            </tr>
            <tr>
                <td><b>Phone Number</b></td>
                <td class="padding-class">@Html.TextBox("txtPhone") </td>
            </tr>
            <tr>
                <td><b>Position</b></td>
                <td class="padding-class">
                    @Html.DropDownList("txtPosition", new List<SelectListItem>
               { new SelectListItem{Text="Production Manager", Value="Production Manager"},
               new SelectListItem{Text="Programmer", Value="Programmer"},
               new SelectListItem{Text="Project Manager", Value="Project Manager"},
               new SelectListItem{Text="Editor", Value="Editor"},
                 new SelectListItem{Text="HR Director", Value="HR Director"}}, "Please Select")
                </td>
            </tr>
            <tr>
                <td>
                    <button class="btn" id="btnSave" type="submit">Save</button>
                </td>
            </tr>
        </table>

    </div>

</div>
